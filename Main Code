#Time = Delay | Random = Random Number
import time
import random

#Properties
attack = 0
damage = 2
userHP = 10
enemyHP = 0
turn = 0
active = 0
monsters = ['Zombie', 'Skeleton']

#BattleAttack
def monsterAttack(attack, turn, monsterName, userHP, enemyHP):
    if turn == 0:
        print("[Enemy turn...]")
        time.sleep(1)
        print(str(monsterName + " damaged you " + str(int(attack)) + " DMG"))
        userHP = userHP - attack
        turn = 1
    if turn == 1:
        print("[Your turn...]")
        time.sleep(1)
        inputting = True
        while inputting:
            choice = input("[ATTACK] [HEAL] [RUN AWAY]")
            if choice == 'ATTACK':
                print(str("Player chose ATTACK"))
                print(int(damage + "DMG"))
                turn = 0
                inputting = False
            elif choice == 'HEAL':
                pass
            elif choice == 'RUN AWAY':
                pass
            else:
                print('Invalid Response')
                time.sleep(1)
           
            

#Random Monster Selector
while True:
    main = input("[Input 'Start' to begin]").lower()
    if main == 'start':
        while True:
            roll = random.randint(1,2)
            enemyHP = random.randint (10,20)
            while enemyHP >= 1
                if roll == 1:
                    active = 1
                    monsterAttack(random.randint(1,3), str(int(0)), random.choice(monsters), userHP, enemyHP)
